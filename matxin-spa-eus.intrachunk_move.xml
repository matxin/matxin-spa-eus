<transfer>

  <!-- per!=''/per || type!='adi-kat'/per	|| no-overwrite -->
  <def-rule comment="">
    <template match="CHUNK[@type != 'adi-kat' and not(@per) and ./NODE/@per != '']">
      <copy>
        <attribute name="per"><value-of select="NODE/@per"/></attribute>
        <apply-templates select="@* | *"/>
      </copy>
    </template> 
  </def-rule>

  <def-rule comment="">
    <template match="CHUNK[@type != 'adi-kat' and .//NODE[@num != '' and @def]]">
      <copy>
        <attribute name="num"><value-of select=".//NODE[@num != '' and @def]/@num"/></attribute>
        <apply-templates select="@* | *"/>
      </copy>
    </template> 
  </def-rule>
  
  
  <!-- spost!=''/ref /spostref concat -->
 <def-rule comment="">
    <template match="CHUNK[.//NODE[@spost != '' and @ref]]">
      <copy>
        <attribute name="spostref"><value-of select=".//NODE[@spost != '' and @ref]/@ref"/></attribute>
        <apply-templates select="@* | *"/>
      </copy>
    </template> 
  </def-rule>


</transfer>
